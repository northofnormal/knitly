<div id="patternContainer">

	<div class="pattern">
		<h1>Add a pattern</h1>
	</div>

	<div class="form">
		<%= simple_form_for @pattern do |f|  %>
			<div class="patternForm">
				<div class="patternfield">
					<%= f.label :title %>:<br>
					<%= f.text_field :title %>
				</div>
				
				<div class="patternfield">
					<%= f.label :description %>:<br>
					<%= f.text_area :description %><br>
				</div>

				<div class="patternfield">
					<%= f.label :gauge %>:<br>
					<%= f.text_field :gauge %><br>
				</div>
				
				<div class="patternfield">
					<%= f.label :needles %>:<br>
					<%= f.text_field :needles %><br>
				</div> 
				
				<div class="patternfield">
					<%= f.label :yarn %>:<br>
					<%= f.text_field :yarn %>
				</div>
			</div>

			<div class="pattern">
				<h3>Sizes</h3>
				<div id="versions">
					<%= f.simple_fields_for :versions do |version| %>
						<%= render 'version_field', :f => version %>
					<% end %>
				</div>
				<div class="links">
   			  <%= link_to_add_association 'add a size', f, :versions %>
 				</div>
 		  	<div class="submit">
		  		<%= f.submit "Add Pattern" %>
		  	</div>
			</div>
		<% end %>
	</div>
</div>