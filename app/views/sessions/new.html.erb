<div class="formFrame">
  <div id="loginForm">
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :username %><br>
        <%= text_field_tag :username, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <div class="field">
        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      </div>
      <div class="loginbtn">
        <%= submit_tag "Log in" %>
      </div>
    <% end %>
  </div>
</div>
<div class="loginllama">
  <%= image_tag "loginllama.png" %>
</div>
